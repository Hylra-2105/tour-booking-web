extends ../layouts/account.pug

block title
  title Nhập mã OTP

block main
    .form-account
        h1.inner-title Nhập mã OTP
        p.inner-desc Vui lòng nhập mã OTP để tiếp tục
        form.inner-form(action="" id="otp-password-form")
            .inner-group
                label.inner-label(for="otp") Mã OTP
                input(
                    type="text",
                    name="otp",
                    id="otp",
                    placeholder="Ví dụ: 123456"
                    class="inner-control"
                    )
            button.inner-button Xác thực
            .inner-more
                span Bạn đã nhớ mật khẩu?
                a(href="#") Đăng nhập

