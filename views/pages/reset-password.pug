extends ../layouts/account.pug

block title
  title Đổi mật khẩu

block main
    .form-account
        h1.inner-title Đổi mật khẩu
        p.inner-desc Vui lòng nhập mật khẩu để tiếp tục
        form.inner-form(action="")
            .inner-group
                label.inner-label(for="password") Mật khẩu mới
                input(
                    type="password",
                    name="password",
                    id="password",
                    class="inner-control"
                    )
            .inner-group
                label.inner-label(for="confirmPassword") Xác nhận mật khẩu 
                input(
                    type="password",
                    name="confirmPassword",
                    id="confirmPassword",
                    class="inner-control"
                    )
            button.inner-button Thay đổi
            .inner-more
                span Bạn đã nhớ mật khẩu?
                a(href="#") Đăng nhập

