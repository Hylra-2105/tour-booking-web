extends ../layouts/default.pug
include ../mixins/checkbox.pug
include ../mixins/pagination.pug
include ../mixins/action.pug
include ../mixins/search.pug

block title
  title Nhóm quyền

block main
  h1.box-title Nhóm quyền

  // Section 5
  .section-5 
    .inner-wrap 
      .inner-change-status
        +action-select()
        .inner-item
          button Áp dụng
      +search-input('Tìm kiếm')
      a.inner-button-create(href="#")  + Tạo mới
  // End Section 5

  // Section 6
  .section-6
    .table-2 
      table 
        thead
          tr
            th.text-left
              +checkbox-30("","")
            th.text-left Tên nhóm quyền
            th.text-left Mô tả ngắn
            th.text-left Hành động
        tbody
          tr
            td.text-left
              +checkbox-30("","")
            td.text-left Quản trị viên
            td.text-left Có đầy đủ các quyền
            td.text-left 
              .box-actions
                a(href="#" class="inner-edit") 
                  <i class="fa-regular fa-pen-to-square"></i>
                a(href="#" class="inner-remove") 
                  <i class="fa-regular fa-trash-can"></i>
        tbody
          tr
            td.text-left
              +checkbox-30("","")
            td.text-left Quản lý tour
            td.text-left Có đầy đủ quyền liên quan đến tour
            td.text-left 
              .box-actions
                a(href="#" class="inner-edit") 
                  <i class="fa-regular fa-pen-to-square"></i>
                a(href="#" class="inner-remove") 
                  <i class="fa-regular fa-trash-can"></i>
  // End Section 6

  //Section 7
  +section-7('Hiển thị 1 - 10 của 57')
  //End Section 7
